<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_map"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.MainActivity">

    <net.daum.mf.map.api.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toBottomOf="@id/view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/view"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/primary"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/search_tv"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/white_round_shape"
        android:layout_marginTop="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="@id/search_iv"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageView
        android:id="@+id/search_iv"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/ic_outline_search_24"
        android:layout_marginTop="10dp"
        android:layout_marginStart="30dp"
        android:scaleType="centerInside"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <LinearLayout
        android:id="@+id/map_filter_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginStart="15dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15dp"
        android:gravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/view">

        <TextView
            android:id="@+id/rent_type_bt"
            android:layout_width="80dp"
            android:layout_height="33dp"
            android:background="@drawable/brown_round_shape"
            android:text="전월세"
            android:gravity="center"
            android:layout_marginEnd="20dp"
            android:textAppearance="@style/map_filter_text"/>

        <TextView
            android:id="@+id/area_bt"
            android:layout_width="80dp"
            android:layout_height="33dp"
            android:background="@drawable/brown_round_shape"
            android:text="평형"
            android:gravity="center"
            android:layout_marginEnd="20dp"
            android:textAppearance="@style/map_filter_text"/>

        <TextView
            android:id="@+id/price_bt"
            android:layout_width="80dp"
            android:layout_height="33dp"
            android:background="@drawable/brown_round_shape"
            android:text="가격대"
            android:gravity="center"
            android:layout_marginEnd="20dp"
            android:textAppearance="@style/map_filter_text"/>

        <TextView
            android:id="@+id/floor_bt"
            android:layout_width="80dp"
            android:layout_height="33dp"
            android:background="@drawable/brown_round_shape"
            android:text="층"
            android:gravity="center"
            android:textAppearance="@style/map_filter_text"/>

    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:id="@+id/infra_maker_filter_bt"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#754C24"
        android:outlineSpotShadowColor="@color/transparent"
        app:cardCornerRadius="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/outline_place_24"
            android:layout_gravity="center"
            app:tint="@color/white" />
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/infra_list"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:visibility="gone"
        app:cardCornerRadius="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/infra_maker_filter_bt">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="center">
            <ImageView
                android:id="@+id/subway_bt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/outline_subway_24"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop"/>
            <ImageView
                android:id="@+id/bicycle_bt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/outline_pedal_bike_24"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop"/>
            <ImageView
                android:id="@+id/restaurant_bt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/outline_restaurant_24"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop"/>
            <ImageView
                android:id="@+id/cafe_bt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/outline_local_cafe_24"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop"/>
            <ImageView
                android:id="@+id/shopping_street_bt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/outline_store_24"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop"/>
            <ImageView
                android:id="@+id/convenience_bt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/outline_local_convenience_store_24"
                android:layout_marginTop="5dp"
                android:scaleType="centerCrop"/>
            <ImageView
                android:id="@+id/fitness_bt"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/outline_fitness_center_24"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:scaleType="centerCrop"/>
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>