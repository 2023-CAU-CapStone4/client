<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="20dp"
    android:layout_marginTop="20dp"
    android:layout_marginEnd="20dp"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:id="@+id/subway_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/subway_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/outline_subway_24"/>
        <TextView
            android:id="@+id/subway_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:text="상도역 10분"
            android:textSize="20sp"
            android:textAppearance="@style/more_text" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/bus_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">
        <ImageView
            android:id="@+id/bus_iv"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/outline_directions_bus_24"/>
        <TextView
            android:id="@+id/bus_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="정류장 10분"
            android:textSize="20sp"
            android:layout_marginStart="10dp"
            android:textAppearance="@style/more_text" />
    </LinearLayout>

    <net.daum.mf.map.api.MapView
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginVertical="30dp"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintTop_toBottomOf="@id/bus_ll"/>

</LinearLayout>